<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/OrangeButton</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ff000000</item>-->
    </style>

    <style name="MyActionBar"
           parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">#ffeeaa00</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ff333333</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
           parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="OrangeButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:width">@dimen/activity_practice_button_size</item>
        <item name="android:height">@dimen/activity_practice_button_size</item>
        <item name="android:layout_width">@dimen/activity_practice_button_size</item>
        <item name="android:layout_height">@dimen/activity_practice_button_size</item>
    </style>

    <style name="SummaryLabel">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PracticeLabel">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SummaryFigure">
        <item name="android:textColor">#ffECCB0F</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TrainingLastRecordFigureLayout">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TrainingSetHeaderLabel">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    <style name="TrainingSetComponentValue">
        <item name="android:textColor">#ffECCB0F</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TrainingCurrentSetComponentValue">
        <item name="android:textColor">#ffECCB0F</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bounce_in_anim</item>
        <item name="android:windowExitAnimation">@anim/bounce_out_anim</item>
    </style>
</resources>
